@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("New", "New", "Movies", null, new { @class = "btn btn-secondary mb-3" })

@if (!Model.Any())
{
    <p>We don't have any movie yet.</p>
}
else
{
    <table id="movie" class="table table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, new { @class = "btn btn-link" }) |
                        @*@using (Html.BeginForm("Delete", "Movies", FormMethod.Post, new { style = "display: inline;", onSubmit = ("return confirm('Are you sure you want to perform this operation?')") }))
                        {
                            <input type="hidden" name="id" value="@movie.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        }*@
                        <button data-movie-id="@movie.Id" class="btn btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movie").on("click", ".js-delete", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this movie?")) {
                    $.ajax({
                        url: "/api/movies/" + button.attr("data-movie-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        },
                        error: function (err) {
                            console.log("statusCode=" + e.status + ", statusText=" + e.statusText);
                        }
                    })
                }
            })
        })
    </script>
}