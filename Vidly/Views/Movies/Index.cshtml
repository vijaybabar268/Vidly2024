@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("New", "New", "Movies", null, new { @class = "btn btn-primary mb-3", style = "margin-bottom:20px" })

<table id="movie" class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movie").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/Details/" + movie.id + "'/>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<a href='/movies/edit/" + data + "'/>Edit</a> | <button data-movie-id=" + data + " class='btn btn-link js-delete'>Delete</button>";
                        }
                    }
                ]
            });

            $("#movie").on("click", ".js-delete", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this movie?")) {
                    $.ajax({
                        url: "/api/movies/" + button.attr("data-movie-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                            button.parents("tr").remove();
                        },
                        error: function (err) {
                            console.log("statusCode=" + e.status + ", statusText=" + e.statusText);
                        }
                    })
                }
            })
        })
    </script>
}